{
  "manifest_version": 3,
  "name": "comMEnd",
  "version": "0.1.2",
  "description": "Commend yourself on NationStates the easy way.",
  "content_scripts": [
    {
      "js": ["rift.js"],
      "matches": [
        "*://www.nationstates.net/nation=*",
        "*://rift.nationstates.net/nation=*",
        "*://dark.nationstates.net/nation=*",
        "*://liberal.nationstates.net/nation=*",
        "*://conservative.nationstates.net/nation=*",
        "*://m.nationstates.net/nation=*"
      ]
    },
    {
      "js": ["century.js"],
      "matches": ["*://century.nationstates.net/nation=*"]
    }
  ],
  "host_permissions": ["*://*.nationstates.net/nation=*"],
  "browser_specific_settings": {
    "gecko": {
      "id": "comMEnd_pronoun.nationstates@gmail.com"
    }
  }
}
